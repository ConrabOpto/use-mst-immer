        "mobx": "6.6.1",
        "mobx-react": "7.5.2",
        "mobx-state-tree": "5.1.5",
        "prettier": "^2.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^4.6.4",
